<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black"
    tools:context=".Comsultas">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="390dp"
        android:layout_height="96dp"
        android:layout_marginTop="83dp"
        android:layout_marginBottom="600dp"
        android:text="Consultas"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="518dp"
        android:layout_height="344dp"
        android:layout_marginBottom="44dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.886" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@+id/txtResult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TableRow
            android:layout_width="586dp"
            android:layout_height="138dp"
            android:textAlignment="center">

            <Button
                android:id="@+id/btnJoven"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_span="1"
                android:text="Joven" />

            <Button
                android:id="@+id/btnViejo"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_span="1"
                android:text="Vieja" />

            <Button
                android:id="@+id/btnSalarios"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_span="1"
                android:text="Salarios" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <Button
                android:id="@+id/btnCargo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="47dp"
                android:layout_span="4"
                android:text="Estadistica por cargo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="129dp" />
    </TableLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/information"
        android:clickable="true"
        app:backgroundTint="@color/information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/btnInicioCon"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="@color/black"
        android:text="Inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddCon"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResult"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>